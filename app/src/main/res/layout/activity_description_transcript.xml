<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Components.DescriptionTranscript">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/sky"/>

    <TextView
        android:backgroundTint="#C8C8C8"
        android:layout_marginTop="-49dp"
        android:background="@drawable/toprounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img"/>

    <RelativeLayout
        android:layout_marginTop="-45dp"
        android:background="@drawable/toprounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img">

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/headertrans"
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Below is the full transcript that you will be saying:"
        android:textSize="19sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <ScrollView
        android:id="@+id/scrollers"
        android:layout_below="@+id/desc"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="match_parent"
        android:background="@drawable/borders4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/transtxt"
                android:layout_margin="5dp"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-55dp"
        android:layout_below="@+id/scrollers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        />

    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/headertrans"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="-37dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME OR TITLE"
        android:textStyle="bold"
        android:textColor="#20B2AA"
        android:layout_below="@+id/img" />



</RelativeLayout>