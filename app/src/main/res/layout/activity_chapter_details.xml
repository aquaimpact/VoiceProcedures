<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CRUD_CHAPTER.ChapterDetails">

    <TextView
        android:id="@+id/chaptdetailtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter Detail"
        android:textSize="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/IDchapt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter ID:"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/chaptdetailtitle"/>

    <TextView
        android:layout_below="@+id/IDchapt"
        android:id="@+id/detailchaptID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="15dp"
        android:text="Chapter Detail Stuff"
        />

    <TextView
        android:id="@+id/Namechapt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter Name:"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/detailchaptID"/>

    <TextView
        android:layout_below="@+id/Namechapt"
        android:id="@+id/detailchaptName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="15dp"
        android:text="Chapter Detail Stuff"
        />

</RelativeLayout>