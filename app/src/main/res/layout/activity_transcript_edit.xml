<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CRUD_TRANSCRIPT.TranscriptEdit">

    <TextView
        android:id="@+id/createtransiconE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Transcript"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="13dp"
        />

    <ScrollView
        android:id="@+id/lolscrolE"
        android:layout_below="@id/createtransiconE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/qqtxtE"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Transcript Name:"
                android:textSize="18sp" />

            <EditText
                android:layout_below="@+id/qqtxtE"
                android:id="@+id/transnameE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/outline"
                android:hint="Transcript Name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section Linked To:"
                android:layout_above="@+id/sectionlinkedE"
                android:layout_marginLeft="50dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                />

            <Spinner
                android:paddingBottom="8dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:background="@drawable/outline"
                android:id="@+id/sectionlinkedE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="45dp"
                android:layout_below="@+id/transnameE"
                android:spinnerMode="dropdown"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/wowsectsE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/sectionlinkedE"
                android:layout_marginLeft="50dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Chapter Linked To:"
                android:layout_above="@+id/subchaptlinkedE"
                android:layout_marginLeft="50dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                />

            <Spinner
                android:visibility="gone"
                android:paddingBottom="8dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:background="@drawable/outline"
                android:id="@+id/subchaptlinkedE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="45dp"
                android:layout_below="@+id/sectionlinkedE"
                android:spinnerMode="dropdown"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/wowsubchaptsE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/sectionlinkedE"
                android:layout_marginLeft="50dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transcript Text:"
                android:layout_above="@+id/transtextE"
                android:layout_marginLeft="50dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                />


            <TextView
                android:id="@+id/importdataE"
                android:textStyle="bold|italic"
                android:textColor="#008080"
                android:layout_marginStart="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMPORT TEXT"
                android:layout_above="@+id/transtextE"
                android:layout_marginLeft="50dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                />

            <ScrollView
                android:id="@+id/transtextE"
                android:layout_below="@+id/subchaptlinkedE"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText

                        android:id="@+id/transtext2E"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline"
                        android:paddingLeft="15dp"
                        android:paddingTop="8dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="8dp"
                        android:textSize="18sp"
                        android:hint="Transcript Text"/>

                </RelativeLayout>
            </ScrollView>

            <TextView
                android:layout_marginTop="21dp"
                android:id="@+id/importimgE"
                android:textStyle="bold|italic"
                android:textColor="#008080"
                android:layout_marginStart="195dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMPORT IMAGE"
                android:layout_below="@+id/transtextE"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/qqtxt2E"
                android:layout_below="@+id/transtextE"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Transcript Image:"
                android:textSize="18sp" />

            <ImageView
                android:adjustViewBounds="true"
                android:layout_below="@+id/qqtxt2E"
                android:id="@+id/transpicE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

            <Button
                android:id="@+id/createtransE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transpicE"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/outline"
                android:text="Confirm Transcript Edit"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>