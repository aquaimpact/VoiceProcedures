<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_marginRight="150dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/CHAPTERNAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapter Name:"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:text="Chapter Name Placeholder"
                    android:layout_marginTop="3dp"
                    android:id="@+id/CHAPTNAMEPLACEHOLDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/COMMTYPE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Communication Type:"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:text="Communication Type Placeholder"
                    android:layout_marginTop="3dp"
                    android:id="@+id/COMMTYPEPLACEHOLDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <LinearLayout
            android:background="@drawable/borderleft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:orientation="vertical"
            android:gravity="center">

                <TextView
                    android:id="@+id/nosub"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Sub-Chapters" />

                <TextView
                    android:id="@+id/NUMBEROFSUBS"
                    android:textSize="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10" />

            </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>